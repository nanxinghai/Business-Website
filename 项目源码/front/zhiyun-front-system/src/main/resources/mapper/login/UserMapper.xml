<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chennq.sys.mapper.login.UserMapper">
    <select id="getUserByUserNameOrEmail" parameterType="java.lang.String" resultType="com.chennq.sys.entity.login.User">
        SELECT
            id,
            user_name,
            nick_name,
            PASSWORD,
            STATUS,
            email,
            phonenumber,
            sex,
            avatar,
            user_type,
            create_by,
            create_time,
            update_by,
            update_time,
            del_flag
        FROM
            tf_sysuser
        WHERE
            phonenumber = #{phoneNum}
            OR email = #{phoneNum}
    </select>
</mapper>