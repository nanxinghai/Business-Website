<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chennq.sys.mapper.login.UserMapper">
    <select id="getUserByUserNameOrEmail" parameterType="java.lang.String" resultType="com.chennq.sys.entity.login.User">
        SELECT
            id,
            user_name,
            nick_name,
            password,
            avatar
        FROM
            tf_sysuser
        WHERE
            phonenumber = #{phoneNum}
            OR email = #{phoneNum}
            AND del_flag = '0'
    </select>
    <select id="getUserByOpenid" parameterType="java.lang.String" resultType="com.chennq.sys.entity.login.User">
        SELECT
            id,
            user_name,
            nick_name,
            password,
            avatar
        FROM
            tf_sysuser
        WHERE
            openid = #{openid}
            AND del_flag = '0'
    </select>
</mapper>